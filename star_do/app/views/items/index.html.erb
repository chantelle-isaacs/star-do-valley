<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Purchase</th>
      <th>Location</th>
      <th>Time</th>
      <th>Weather</th>
      <th>Season</th>
      <th>Quantity</th>
      <th>Note</th>
      <th>Bundle</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.type %></td>
        <td><%= item.purchase %></td>
        <td><%= item.location %></td>
        <td><%= item.time %></td>
        <td><%= item.weather %></td>
        <td><%= item.season %></td>
        <td><%= item.quantity %></td>
        <td><%= item.note %></td>
        <td><%= item.bundle_id %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
